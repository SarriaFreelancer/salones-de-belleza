
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      // The only admin is the one with this specific email.
      return request.auth != null && request.auth.token.email == "admin@divas.com";
    }
    
    // --- Customer Data ---
    match /customers/{customerId} {
      // Admin can do anything. A user can read or update their own profile.
      allow read, update: if isAdmin() || isOwner(customerId);
      // Let any signed-in user create their own customer profile.
      // Admin can also delete profiles.
      allow create: if isOwner(customerId);
      allow delete: if isAdmin();
    }

    match /customers/{customerId}/appointments/{appointmentId} {
      // A user can manage their own appointments. Admin can only read them from this view.
      allow write: if isOwner(customerId);
      allow read: if isAdmin() || isOwner(customerId);
    }
    
    // --- Publicly Readable / Admin-Managed Collections ---
    
    // Stylists are public, but only managed by admins.
    match /stylists/{stylistId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Services are public, but only managed by admins.
    match /services/{document=**} {
        allow read: if true;
        allow write: if isAdmin();
    }
    
    // Gallery is public, but only managed by admins.
    match /gallery/{document=**} {
        allow read: if true;
        allow write: if isAdmin();
    }
    
    // This subcollection is for appointment slots for a given stylist.
    match /stylists/{stylistId}/appointments/{appointmentId} {
        // Any signed in user can read to check for availability
        allow read: if isSignedIn();
        // Only an admin can write to a stylist's schedule (create/update/delete)
        allow write: if isAdmin();
    }

    // --- Centralized Admin Collections ---
    
    match /admin_appointments/{document=**} {
        // Only admins can read or write to the master appointment list
        allow read, write: if isAdmin();
    }

    match /roles_admin/{userId} {
      allow read, write: if isAdmin();
    }
  }
}
