
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return request.auth != null && request.auth.token.email == "admin@divas.com";
    }
    
    // --- Customer Data ---
    match /customers/{customerId} {
      allow read, update, delete: if isAdmin() || isOwner(customerId);
      // Let any signed-in user create a customer profile for themselves
      allow create: if isSignedIn();
    }

    match /customers/{customerId}/appointments/{appointmentId} {
      // isOwner can do anything to their own appointments
      allow read, write: if isOwner(customerId);
      // Admin can only read customer appointments, not change them
      allow get, list: if isAdmin();
    }
    
    // --- Publicly Readable / Admin-Managed Collections ---
    
    // Stylists are public, but only managed by admins.
    match /stylists/{stylistId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Services are public, but only managed by admins.
    match /services/{document=**} {
        allow read: if true;
        allow write: if isAdmin();
    }
    
    // Gallery is public, but only managed by admins.
    match /gallery/{document=**} {
        allow read: if true;
        allow write: if isAdmin();
    }
    
    // This subcollection is for appointment slots for a given stylist.
    match /stylists/{stylistId}/appointments/{appointmentId} {
        // Any signed in user can read to check for availability
        allow read: if isSignedIn();
        // Any signed in user can create an appointment to block off time
        allow create: if isSignedIn();
        // Only an admin can modify or delete existing appointment slots
        allow update, delete: if isAdmin();
    }

    // --- Centralized Admin Collections ---
    
    match /admin_appointments/{document=**} {
        // Only admins can read or write to the master appointment list
        allow read, write: if isAdmin();
    }

    match /roles_admin/{userId} {
      allow read, write: if isAdmin();
    }
  }
}
