
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // The new, robust isAdmin function.
    // A user is an admin if their email is the special first admin email,
    // OR if their UID exists in the admin roles collection.
    function isAdmin() {
      return isSignedIn() && (
        request.auth.token.email == "admin@divas.com" ||
        exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid))
      );
    }
    
    // CUSTOMERS
    // Customers can create their own profile.
    // Only the owner can read or update their own profile.
    match /customers/{customerId} {
      allow get: if isOwner(customerId) || isAdmin();
      allow list: if isAdmin();
      allow create: if isOwner(customerId);
      allow update: if isOwner(customerId);
      allow delete: if false; // Users cannot delete their profiles
    }

    // CUSTOMER APPOINTMENTS
    // Customers can manage their own appointments.
    // Admins have full access.
    match /customers/{customerId}/appointments/{appointmentId} {
      allow read, list: if isOwner(customerId) || isAdmin();
      allow create, update: if isOwner(customerId);
      allow delete: if isOwner(customerId) || isAdmin();
    }
    
    // STYLISTS
    // Publicly readable, but only admins can write.
    match /stylists/{stylistId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }
    
    // STYLIST APPOINTMENTS
    // Stylists can view appointments assigned to them.
    // Admins have full access.
    match /stylists/{stylistId}/appointments/{appointmentId} {
        allow read, list: if isOwner(stylistId) || isAdmin();
        allow create, update, delete: if isAdmin(); // Only admins can create appointments here
    }

    // SERVICES
    // Publicly readable, but only admins can write.
    match /services/{serviceId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }
    
    // GALLERY
    // Publicly readable, but only admins can write.
    match /gallery/{galleryId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }

    // ADMIN APPOINTMENTS
    // Only admins can read, create, update, or delete from the central appointments collection.
    match /admin_appointments/{appointmentId} {
        allow read, list, create, update, delete: if isAdmin();
    }

    // ADMIN ROLES
    // This collection is highly restricted.
    // Any authenticated user can create their OWN admin role document.
    // This, combined with the isAdmin() function, solves the chicken-and-egg problem securely.
    match /roles_admin/{userId} {
      allow read: if isAdmin();
      allow list: if isAdmin();
      allow write: if request.auth.uid == userId; // Allows a user to create their own admin doc
      allow delete: if isAdmin();
    }
  }
}
