
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isSignedIn() && (
        request.auth.token.email == "admin@divas.com" ||
        exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid))
      );
    }
    
    // CUSTOMERS
    match /customers/{customerId} {
      allow read: if isAdmin() || isOwner(customerId);
      allow create, update: if isOwner(customerId);
      allow delete: if false; // Users cannot delete their profiles
    }

    // CUSTOMER APPOINTMENTS
    match /customers/{customerId}/appointments/{appointmentId} {
      allow read: if isOwner(customerId) || isAdmin();
      allow create, update: if isOwner(customerId);
      allow delete: if isOwner(customerId) || isAdmin();
    }
    
    // STYLISTS
    // Admins can do anything. Anyone can get a single stylist document.
    match /stylists/{stylistId} {
      allow get: if true;
      allow list, write: if isAdmin();
    }
    
    // STYLIST APPOINTMENTS (This is a subcollection for aggregated views)
    match /stylists/{stylistId}/appointments/{appointmentId} {
        allow read: if isOwner(stylistId) || isAdmin();
        allow write: if isAdmin();
    }

    // SERVICES
    // Publicly readable, but only admins can write.
    match /services/{serviceId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }
    
    // GALLERY
    // Publicly readable, but only admins can write.
    match /gallery/{galleryId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }

    // ADMIN APPOINTMENTS
    match /admin_appointments/{appointmentId} {
        allow read, write: if isAdmin();
    }

    // ADMIN ROLES
    match /roles_admin/{userId} {
      allow read, delete: if isAdmin();
      allow create: if isOwner(userId);
    }
  }
}
