
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isSignedIn() && (
        exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid))
      );
    }
    
    // --- Customer Data ---
    match /customers/{customerId} {
      allow read: if isAdmin() || isOwner(customerId);
      allow create, update: if isOwner(customerId);
      allow delete: if false; 
    }

    match /customers/{customerId}/appointments/{appointmentId} {
      allow read: if isOwner(customerId) || isAdmin();
      allow create, update: if isOwner(customerId);
      allow delete: if isOwner(customerId) || isAdmin();
    }
    
    // --- Admin-Managed Collections ---
    // Admins have full control. Public can only read services and gallery.
    
    match /stylists/{stylistId} {
      allow read, write: if isAdmin();
    }
    
    match /services/{serviceId} {
        allow read: if true;
        allow write: if isAdmin();
    }
    
    match /gallery/{galleryId} {
        allow read: if true;
        allow write: if isAdmin();
    }
    
    // This subcollection is for aggregated views, only for admins or the stylist themselves
    match /stylists/{stylistId}/appointments/{appointmentId} {
        allow read: if isOwner(stylistId) || isAdmin();
        allow write: if isAdmin();
    }

    // --- Centralized Admin Collections ---
    
    // Only admins have any access to the centralized appointments collection.
    match /admin_appointments/{appointmentId} {
        allow read, write: if isAdmin();
    }

    // Only admins can manage roles, but a user can create their own doc on signup.
    match /roles_admin/{userId} {
      allow create: if isSignedIn() && isOwner(userId);
      allow read, delete: if isAdmin();
    }
  }
}
