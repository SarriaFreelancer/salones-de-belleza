rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return request.auth != null && request.auth.token.email == "admin@divas.com";
    }
    
    // --- Customer Data ---
    match /customers/{customerId} {
      allow read, update: if isAdmin() || isOwner(customerId);
      allow create: if isOwner(customerId);
      allow delete: if isAdmin();
    }

    match /customers/{customerId}/appointments/{appointmentId} {
      allow read, write: if isAdmin() || isOwner(customerId);
    }
    
    // --- Publicly Readable / Admin-Managed Collections ---
    
    // Stylists are public, but only managed by admins.
    match /stylists/{stylistId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Services are public, but only managed by admins.
    match /services/{document=**} {
        allow read: if true;
        allow write: if isAdmin();
    }
    
    // Gallery is public, but only managed by admins.
    match /gallery/{document=**} {
        allow read: if true;
        allow write: if isAdmin();
    }
    
    // This subcollection is for appointment slots for a given stylist.
    // Allow any signed-in user to read to check for availability.
    match /stylists/{stylistId}/appointments/{appointmentId} {
        allow read: if isSignedIn();
        allow write: if isAdmin();
    }

    // --- Centralized Admin Collections ---
    
    match /admin_appointments/{document=**} {
        allow read, write: if isAdmin();
    }

    match /roles_admin/{userId} {
      allow read, write: if isAdmin();
    }
  }
}
