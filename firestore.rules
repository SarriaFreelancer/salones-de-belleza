
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      // An admin is defined as any authenticated user with the specific email 'admin@divas.com'.
      return request.auth != null && request.auth.token.email == "admin@divas.com";
    }
    
    // --- Customer Data ---
    // A user can manage their own customer profile. Admins can read them.
    match /customers/{customerId} {
      allow read: if isAdmin() || isOwner(customerId);
      allow create, update: if isOwner(customerId);
      allow delete: if false; 
    }

    // A user can manage their own appointments. Admins have full access.
    match /customers/{customerId}/appointments/{appointmentId} {
      allow read, write: if isAdmin() || isOwner(customerId);
    }
    
    // --- Admin-Managed Collections ---
    
    // Admins have full control over stylists.
    match /stylists/{stylistId} {
      allow read, write: if isAdmin();
    }
    
    // Public can read services, only admins can write.
    match /services/{serviceId} {
        allow read: if true;
        allow write: if isAdmin();
    }
    
    // Public can read gallery, only admins can write.
    match /gallery/{galleryId} {
        allow read: if true;
        allow write: if isAdmin();
    }
    
    // This subcollection is for aggregated views, only for admins.
    match /stylists/{stylistId}/appointments/{appointmentId} {
        allow read, write: if isAdmin();
    }

    // --- Centralized Admin Collections ---
    
    // Only admins have any access to the centralized appointments collection.
    match /admin_appointments/{appointmentId} {
        allow read, write: if isAdmin();
    }

    // Admins can manage roles. A user can create their own doc on signup.
    match /roles_admin/{userId} {
      allow read, write: if isAdmin();
      allow create: if isOwner(userId);
    }
  }
}
