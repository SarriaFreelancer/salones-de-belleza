
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isSignedIn() && (
        request.auth.token.email == "admin@divas.com" ||
        exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid))
      );
    }
    
    // CUSTOMERS
    match /customers/{customerId} {
      allow read: if isAdmin() || isOwner(customerId);
      allow create, update: if isOwner(customerId);
      allow delete: if false; // Users cannot delete their profiles
    }

    // CUSTOMER APPOINTMENTS
    match /customers/{customerId}/appointments/{appointmentId} {
      allow read: if isOwner(customerId) || isAdmin();
      allow create, update: if isOwner(customerId);
      allow delete: if isOwner(customerId) || isAdmin();
    }
    
    // STYLISTS, SERVICES, and GALLERY (Publicly Readable)
    // Anyone can read the list of stylists, services, or gallery images,
    // but only admins can create, update, or delete them.
    match /{collection}/{docId} 
    where collection in ['stylists', 'services', 'gallery'] {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // STYLIST APPOINTMENTS (This is a subcollection for aggregated views)
    // This should only be accessible by the stylist themselves or an admin.
    match /stylists/{stylistId}/appointments/{appointmentId} {
        allow read: if isOwner(stylistId) || isAdmin();
        allow write: if isAdmin(); // Only admins can create/modify these aggregated views
    }

    // ADMIN APPOINTMENTS
    // Only admins have any access to the centralized appointments collection.
    match /admin_appointments/{appointmentId} {
        allow read, write: if isAdmin();
    }

    // ADMIN ROLES
    // A user can create their own admin role document (e.g., during initial signup),
    // but only existing admins can read or delete roles.
    match /roles_admin/{userId} {
      allow create: if isOwner(userId);
      allow read, delete: if isAdmin();
    }
  }
}
