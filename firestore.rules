
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // A robust isAdmin function.
    // A user is an admin if their email is the special first admin email,
    // OR if their UID exists in the admin roles collection.
    function isAdmin() {
      return isSignedIn() && (
        request.auth.token.email == "admin@divas.com" ||
        exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid))
      );
    }
    
    // CUSTOMERS
    // An admin can list/get any customer.
    // A customer can create their own profile, and get or update their own profile.
    match /customers/{customerId} {
      allow list, get: if isAdmin();
      allow create, update: if isOwner(customerId);
      allow delete: if false; // Users cannot delete their profiles
    }

    // CUSTOMER APPOINTMENTS
    // Customers can manage their own appointments.
    // Admins have full access.
    match /customers/{customerId}/appointments/{appointmentId} {
      allow read, list: if isOwner(customerId) || isAdmin();
      allow create, update: if isOwner(customerId);
      allow delete: if isOwner(customerId) || isAdmin();
    }
    
    // STYLISTS
    // Publicly readable for individual documents (`get`), but only admins can list or write.
    match /stylists/{stylistId} {
      allow read: if true;
      allow write, list: if isAdmin();
    }
    
    // STYLIST APPOINTMENTS (This is a subcollection for aggregated views, not primary storage)
    // Stylists can view appointments assigned to them.
    // Admins have full access for management.
    match /stylists/{stylistId}/appointments/{appointmentId} {
        allow read, list: if isOwner(stylistId) || isAdmin();
        allow create, update, delete: if isAdmin();
    }

    // SERVICES
    // Publicly readable, but only admins can write.
    match /services/{serviceId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }
    
    // GALLERY
    // Publicly readable, but only admins can write.
    match /gallery/{galleryId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }

    // ADMIN APPOINTMENTS
    // Only admins can read, create, update, or delete from the central appointments collection.
    match /admin_appointments/{appointmentId} {
        allow read, list, create, update, delete: if isAdmin();
    }

    // ADMIN ROLES
    // This collection is highly restricted.
    // Crucially, any authenticated user can create THEIR OWN admin role document.
    // This, combined with the isAdmin() function checking the email, solves the 
    // chicken-and-egg problem for the first admin securely.
    // Only existing admins can read the list or delete roles.
    match /roles_admin/{userId} {
      allow read, list, delete: if isAdmin();
      allow create: if request.auth.uid == userId;
    }
  }
}
